<style>
 
.background {
  fill: none;
  pointer-events: all;
}
 
#states {
  fill: #aaa;
  stroke: #fff;
  stroke-width: 1.5px;
}
 
#states .active {
  fill: orange;
}

#states .features{
	fill: grey;
}

#states .hover{
  fill: red;
}

div.tooltip {   
  position: absolute;           
  text-align: center;           
  width: 60px;                  
  height: 28px;                 
  padding: 2px;             
  font: 12px sans-serif;        
  background: lightsteelblue;   
  border: 0px;      
  border-radius: 8px;           
  pointer-events: none;         
}
 
</style>
